{
  "compilerOptions": {
    "target": "ES2017",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "react-jsx",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@/*": ["./src/*"],
      "@schoolx/ai": ["./packages/ai/index.ts"],
      "@schoolx/ai/*": ["./packages/ai/*"],
      "@schoolx/api": ["./packages/api-client/index.ts"],
      "@schoolx/api/*": ["./packages/api-client/*"],
      "@schoolx/auth": ["./packages/auth/index.ts"],
      "@schoolx/auth/*": ["./packages/auth/*"],
      "@schoolx/tokens": ["./packages/design-tokens/index.ts"],
      "@schoolx/tokens/*": ["./packages/design-tokens/*"],
      "@schoolx/hooks": ["./packages/hooks/index.ts"],
      "@schoolx/hooks/*": ["./packages/hooks/*"],
      "@schoolx/lib": ["./packages/lib/index.ts"],
      "@schoolx/lib/*": ["./packages/lib/*"]
    }
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts",
    ".next/dev/types/**/*.ts",
    "**/*.mts"
  ],
  "exclude": ["node_modules"]
}
